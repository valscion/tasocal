source 'https://rubygems.org'

gem 'ri_cal'
gem 'httparty'

group :development do
  # An IRB alternative and runtime developer console
  gem 'pry'

  # Pretty print your Ruby objects with style -- in full color and with proper
  # indentation
  gem 'awesome_print'

  # A mini view framework for console/irb that's easy to use, even while under
  # its influence.
  gem 'hirb'

  # Provide MRI Core documentation and source code for the Pry REPL
  gem 'pry-doc'

  # Connect to Pry remotely
  gem 'pry-remote'

  # Pry navigation commands via debugger (formerly ruby-debug)
  gem 'pry-debugger'

  # Walk the stack in a Pry session
  gem 'pry-stack_explorer'

  # Simple readline-like tool able to change representation of input
  gem 'coolline'

  # Fast and easy syntax highlighting for selected languages, written in Ruby
  gem 'coderay'
end
